<Window x:Class="Task_Planner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_Planner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Title"/>
            <TextBox x:Name="Titlebox" Width="150" Margin="0,0,10,0"/>
            <Label Content="Deadline"/>
            <DatePicker x:Name="DeadlinePicker" Width="150" Margin="0,0,10,0"/>
            <Label Content="Priority"/>
            <ComboBox x:Name="PriorityBox" Width="130" Margin="0,0,10,0">
                <ComboBoxItem Content="Low"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="High"/>
            </ComboBox>
            <Button Content="Add Task" Width="150" Margin="30,0,0,0" Click="AddTask_Click"/>
        </StackPanel>
        <ListView x:Name="TaskList" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="250"/>
                    <GridViewColumn Header="Deadline" DisplayMemberBinding="{Binding Deadline}" Width="160"/>
                    <GridViewColumn Header="Priority" DisplayMemberBinding="{Binding Priority}" Width="150"/>
                    <GridViewColumn Header="Status" Width="160">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox SelectedItem="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="150">
                                    <ComboBoxItem Content="NotStarted"/>
                                    <ComboBoxItem Content="InProgress"/>
                                    <ComboBoxItem Content="Completed"/>
                                    <ComboBoxItem Content="OnHold"/>
                                </ComboBox>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="50">
                                <Button Content="Delete" Width="40" Click="RemoveTask_Click"/>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
